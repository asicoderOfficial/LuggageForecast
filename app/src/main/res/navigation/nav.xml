<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.simplerecyclerview.fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main">
        <action
            android:id="@+id/action_mainFragment_to_luggageFragment"
            app:destination="@+id/luggageFragment" />
        <action
            android:id="@+id/action_mainFragment_to_aboutFragment"
            app:destination="@+id/aboutFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.example.simplerecyclerview.fragments.AboutFragment"
        android:label="aboutFragment"
        tools:layout="@layout/fragment_about">
        <action
            android:id="@+id/action_aboutFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/luggageFragment"
        android:name="com.example.simplerecyclerview.fragments.LuggageFragment"
        android:label="fragment_luggage"
        tools:layout="@layout/fragment_luggage">
        <action
            android:id="@+id/action_luggageFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>